  // picture loop
  u8g.firstPage();  
  do {
    u8g.drawFrame(1,2,126,62);
    draw();
    
  } while( u8g.nextPage() );
  delay(2000);
  clearLCD();
  u8g.firstPage();  

  
  do {
    u8g.drawFrame(1,2,126,62);
    next();
  } while( u8g.nextPage() );
    delay(2000);
  clearLCD();
  u8g.firstPage();  

  
  do {
     picture();
  } while( u8g.nextPage() );
  delay(2000);
 clearLCD();
  // rebuild the picture after some delay
  delay(50);
}
